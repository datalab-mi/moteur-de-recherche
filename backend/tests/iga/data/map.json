{
  "settings": {
    "analysis": {
      "char_filter": {
        "quotes": {
          "type": "mapping",
          "mappings": [
            "\\u0091=>\\u0027",
            "\\u0092=>\\u0027",
            "\\u2018=>\\u0027",
            "\\u2019=>\\u0027",
            "\\u201B=>\\u0027"
          ]
        },
        "new_line": {
          "type": "mapping",
          "mappings": ["-\\u0020=>"]
        }
      },
      "filter" : {
        "french_elision": {
          "type":         "elision",
          "articles_case": true,
          "articles": [
              "l", "m", "t", "qu", "n", "s",
              "j", "d", "c", "jusqu", "quoiqu",
              "lorsqu", "puisqu"
            ]
        },
        "french_stop": {
          "type":       "stop",
          "stopwords":  "_french_"
        },
        "more_stop": {
          "type": "stop",
          "ignore_case": true,
          "stopwords": [ "a", "Ã "]
        },
        "minimal_stemmer": {
          "type" : "stemmer",
          "name" : "french"
        },
        "acronym": {
          "type": "synonym"
        },
        "light_acronym": {
          "type": "synonym"
        },
        "expression": {
          "type":   "synonym"
        },
        "synonym": {
          "type": "synonym"
        },
        "remove_artifact" : {
         "type": "pattern_replace",
         "pattern": "_(.*)_",
         "replacement" : "$1"
       }
      },
      "analyzer": {
        "my_analyzer": {
          "type":"custom",
          "char_filter": [ "quotes","new_line","html_strip"],
          "tokenizer": "icu_tokenizer",
          "filter": [
            "lowercase",
            "french_elision",
            "icu_folding",
            "french_stop",
            "more_stop",
            "minimal_stemmer",
            "light_acronym",
            "synonym",
            "remove_artifact"
            ]
        },
        "my_search_analyzer": {
          "type":"custom",
          "char_filter": [ "quotes","new_line","html_strip"],
          "tokenizer": "icu_tokenizer",
          "filter": [
            "lowercase",
            "french_elision",
            "icu_folding",
            "more_stop",
            "minimal_stemmer",
            "acronym",
            "synonym",
            "remove_artifact"
            ]
        }
      }  
    },
    "index": {
      "blocks": {
        "read_only_allow_delete": "false"
      }
    }
  },
  "mappings":{
    "properties": {
       "content": {
          "type": "text",
          "analyzer" : "my_analyzer",
          "search_analyzer": "my_search_analyzer"
      }
    }
  }
}
